{{- printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n" | safeHTML -}}
<rss version="2.0">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Site.BaseURL }}</link>
    <description>{{ .Site.Params.description | plainify }}</description>
    <language>{{ .Site.Language.Lang }}</language>

    {{ $allItems := slice }} <!-- Создаём пустой массив для всех записей -->

    <!-- Обычные статьи (не библиотека) -->
    {{ range where .RegularPages "Section" "!=" "library" }}
      {{ $allItems = $allItems | append (dict "title" .Title "link" .Permalink "description" (.Summary | plainify) "pubDate" .Date "guid" .Permalink) }}
    {{ end }}

    <!-- Материалы из библиотеки (только обновлённые за последний месяц) -->
    {{ range where .RegularPages "Section" "library" }}
      {{ if gt .Lastmod (now.AddDate 0 -1 0) }}
        {{ $allItems = $allItems | append (dict "title" .Title "link" .Permalink "description" (.Summary | plainify) "pubDate" .Lastmod "guid" .Permalink) }}
      {{ end }}
    {{ end }}

    <!-- Сортируем все элементы по дате (новые вверху) -->
    {{ range sort $allItems "pubDate" "desc" }}
    <item>
      <title>{{ .title }}</title>
      <link>{{ .link }}</link>
      <description>{{ .description }}</description>
      <pubDate>{{ .pubDate.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
      <guid isPermaLink="true">{{ .guid }}</guid>
    </item>
    {{ end }}

  </channel>
</rss>