{{- printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n" | safeHTML -}}
<rss version="2.0">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Site.BaseURL }}</link>
    <description>{{ .Site.Params.description | plainify }}</description>
    <language>{{ .Site.Language.Lang }}</language>

    {{ $articles := where .RegularPages "Section" "!=" "library" }} <!-- Обычные статьи -->
    {{ $library := where .RegularPages "Section" "library" }} <!-- Библиотека -->
    {{ $filteredLibrary := where $library ".Lastmod" "gt" (now.AddDate 0 -1 0) }} <!-- Только обновления -->

    {{ $allItems := union $articles $filteredLibrary }} <!-- Объединяем статьи и библиотеку -->
    {{ $sortedItems := sort $allItems "Date" "desc" }} <!-- Сортируем по дате -->

    {{ range $sortedItems }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <description>{{ .Summary | plainify }}</description>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
    </item>
    {{ end }}

  </channel>
</rss>