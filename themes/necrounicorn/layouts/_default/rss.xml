{{- printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n" | safeHTML -}}
<rss version="2.0">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Site.BaseURL }}</link>
    <description>{{ .Site.Params.description | plainify }}</description>
    <language>{{ .Site.Language.Lang }}</language>

    {{ range where .Pages "Section" "!=" "library" }} <!-- Обычные посты -->
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <description>{{ .Summary | plainify }}</description>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
    </item>
    {{ end }}

    {{ range where .Pages "Section" "library" }} <!-- Фильтр для Библиотеки -->
      {{ if gt .Lastmod (now.AddDate 0 -1 0) }} <!-- Только обновления за месяц -->
      <item>
        <title>{{ .Title }}</title>
        <link>{{ .Permalink }}</link>
        <description>{{ .Summary | plainify }}</description>
        <pubDate>{{ .Lastmod.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
        <guid isPermaLink="true">{{ .Permalink }}</guid>
      </item>
      {{ end }}
    {{ end }}

  </channel>
</rss>
